{
  "ConnectionStrings": {
    "TestConnection": "*****"
  },
  "NLog": {
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "Neolution.DotNet.Console" }
    ],
    "targets": {
      "console": {
        "type": "ColoredConsole",
        "layout": "[${logger}] ${message} ${exception:format=tostring}",
        "rowHighlightingRules": [
          { "condition": "level == LogLevel.Warn", "foregroundColor": "Yellow" },
          { "condition": "level == LogLevel.Error", "foregroundColor": "Red" },
          { "condition": "level == LogLevel.Fatal", "foregroundColor": "White", "backgroundColor": "Magenta" }
        ]
      }
    }
  }
}
