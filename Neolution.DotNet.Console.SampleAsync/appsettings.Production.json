{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "NLog": {
    "targets": {
      "cloudWatch": {
        "type": "AWSTarget",
        "logGroup": "Neolution.DotNet.Console.Sample",
        "profile": "default",
        "profilesLocation": "C:\\temp\\.aws\\credentials",
        "region": "eu-west-1",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "level",
              "layout": "${level:upperCase=true}"
            },
            {
              "name": "message",
              "layout": "${message}"
            },
            {
              "name": "exception",
              "layout": "${onexception:inner=${exception:format=ToString,StackTrace}}"
            }
          ]
        }
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "console, file, cloudWatch"
      }
    ]
  }
}
